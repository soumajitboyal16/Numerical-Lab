#include<stdio.h>
#include<math.h>
float f(float x) 
{
    return (pow(x,3)-(4*x)-9);
}
int main() 
{
    float a,b,x,y1,y2;
    printf("Enter the interval (a,b) in which root is: ");
    scanf("%f %f",&a,&b);
    y1=f(a);
    y2=f(b);
    if (y1*y2>0) 
	{
        printf("No root exists in the given interval.\n");
        return 0;
    }
    while (fabs(a-b) >=0.00001) 
	{
        x=(a+b)/2;
        printf("a=%f\t b=%f\t x=%f\n",a,b,x);
        if (f(a)*f(x)<0)
            b=x;
        else
            a=x;
    }
    printf("\nThe root is %f\n",x);
    return 0;
}
