#include<stdio.h>
#include<math.h>
float f(float x)
{
    return (pow(x,3) - x - 1);
}
float f_derivative(float x)
{
    return (3*pow(x,2) - 1);
}
int main()
{
    float x0, x1;
    int i = 1;
    printf("Enter initial guess: ");
    scanf("%f", &x0);
    printf("\nIter\t   x0\t\t   f(x0)\t   f'(x0)\t   x1\n");
    while (1)
    {
        x1 = x0 - (f(x0) / f_derivative(x0));
        printf("%d\t%.6f\t%.6f\t%.6f\t%.6f\n", i, x0, f(x0), f_derivative(x0), x1);
        if (fabs(x1 - x0) < 0.00001)
            break;
        x0 = x1;
        i++;
    }
    printf("\nThe root is %.6f\n", x1);
    return 0;
}
